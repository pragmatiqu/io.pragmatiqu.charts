{
	"name": "io.pragmatiqu",
	"version": "1.0.0",
	"description": "UI5 Library: io.pragmatiqu",
	"author": "Michael Gerzabek",
	"license": "Apache-2.0",
	"types": "dist/index.d.ts",
  "files": [
    ".eslintrc.js",
    "LICENCE",
    "README.md",
    "tsconfig.json",
    "ui5.yaml",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "src",
    "test"
  ],	
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "ui5 build --clean-dest",
		"build:ts-interfaces": "npx @ui5/ts-interface-generator",
		"start": "ui5 serve -o test-resources/io/pragmatiqu/Example.html",
		"start:dist": "npm start -- --config ui5-dist.yaml",
		"testsuite": "ui5 serve -o test-resources/io/pragmatiqu/qunit/testsuite.qunit.html",
		"ts-typecheck": "tsc --noEmit",
		"lint": "eslint src test",
		"karma": "karma start",
		"karma-ci": "karma start karma-ci.conf.js",
		"karma-ci-cov": "karma start karma-ci-cov.conf.js",
		"test": "npm run lint && npm run karma-ci-cov"
	},
	"devDependencies": {
		"@openui5/types": "1.126.1",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.14.1",
		"@ui5/cli": "^3.11.0",
		"@ui5/ts-interface-generator": "^0.8.3",
		"eslint": "^8.57.0",
		"karma": "^6.4.3",
		"karma-chrome-launcher": "^3.2.0",
		"karma-coverage": "^2.2.1",
		"karma-ui5": "^3.0.4",
		"karma-ui5-transpile": "^3.4.5",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.7",
		"typescript": "^5.5.2",
		"ui5-middleware-livereload": "^3.0.3",
		"ui5-tooling-transpile": "^3.4.5"
	}
}
